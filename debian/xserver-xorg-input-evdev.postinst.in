#!/bin/sh

set -e

THIS_PACKAGE=xserver-xorg-input-evdev
THIS_SCRIPT=postinst

#INCLUDE_SHELL_LIB#

case "$1" in
  configure)
  if dpkg --compare-versions "$2" lt 1:2.3.2-3; then
    udevadm trigger --subsystem-match=input --action=change
  fi
esac

#DEBHELPER#

exit 0

